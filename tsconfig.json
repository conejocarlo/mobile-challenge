{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "module": "esNext",
    "target": "esnext",
    "baseUrl": "./src/"
  },
  "exclude": [
    "android",
    "ios",
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
